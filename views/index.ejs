<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <title>Gitman Short</title>
  </head>
  <body>
    <div class="container">
      <h1>GITMAN SHORTNER</h1>
      <form action="/s/shortUrls" method="POST" class="my-4 form-inline">
        <label for="fullUrl" class="sr-only">Full Url</label>
        <input
          type="url"
          placeholder="Enter URL"
          name="fullUrl"
          id="fullUrl"
          class="form-control col mr-2"
          required
        />
        <button type="submit" class="btn btn-success">Shrink</button>
      </form>

      <table class="table table-stripped table-responsive">
        <thead>
          <tr>
            <th>Full URL</th>
            <th>Short Url</th>
            <th>Clicks</th>
          </tr>
        </thead>
        <tbody>
          <% shortUrls.forEach(shortUrl => { %>

          <tr onclick="deleteUrl">
            <td><a href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
            <td>
              <a href="/s/<%= shortUrl.short %>"><%= shortUrl.short %></a>
            </td>
            <td><% shortUrl.clicks %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <script>
      function deleteUrl() {
        console.log("in the delte ");
        if (confirm("Are you sure?")) {
          window.location.href = "/s/delete";
        }
      }
    </script>
  </body>
</html>
